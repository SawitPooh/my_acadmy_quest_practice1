<p class="mb-4 text-red-500">Sawit Janpan</p>

<h1 class="text-2xl font-bold mb-6">My Academy Quest</h1>

<%= link_to "My Brag Document", "#", class: "text-blue-600 underline hover:text-blue-800" %>

<div class="mt-8">
  <!-- Add Quest Form (ยังไม่เชื่อม controller) -->
  <form class="flex gap-2">
    <input type="text" placeholder="Add your quest" class="border px-3 py-2 rounded w-full">
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
      Add
    </button>
  </form>
</div>

<!-- Static Quest List -->
<ul class="mt-6 space-y-2">
  <% 3.times do |i| %>
    <li class="flex items-center justify-between bg-gray-100 px-4 py-2 rounded">
      <div class="flex items-center gap-3">
        <input type="checkbox" id="quest_<%= i %>" class="w-4 h-4">
        <label for="quest_<%= i %>" class="cursor-pointer">Quest <%= i + 1 %></label>
      </div>
      <button class="text-red-500 hover:text-red-700">❌</button>
    </li>
  <% end %>
</ul>
